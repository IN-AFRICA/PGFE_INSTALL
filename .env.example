# ── Configuration Docker pour PGFE ──
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

APP_NAME="PGFE"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Africa/Kinshasa
APP_URL=http://localhost

# ── Base de données MySQL ──
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=pgfe_db
DB_USERNAME=pgfe_user
DB_PASSWORD=pgfe_secret

# ── Base de données root (pour administration) ──
DB_ROOT_PASSWORD=pgfe_root_secret

# ── Cache & Sessions ──
BROADCAST_CONNECTION=log
CACHE_STORE=database
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# ── Mail Configuration ──
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@pgfe.local"
MAIL_FROM_NAME="${APP_NAME}"

# ── Logging ──
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ── Vite (Frontend Assets) ──
VITE_APP_NAME="${APP_NAME}"

# ── Spatie Media Library (File uploads) ──
MEDIA_DISK=local

# ── Browsershot (PDF generation) ──
CHROME_PATH=/usr/bin/chromium-browser